{
	"name": "grove",
	"version": "1.0.0",
	"description": "AI-powered Git worktree management CLI with interactive terminal UI",
	"type": "module",
	"main": "./dist/index.js",
	"bin": {
		"grove": "./dist/index.js"
	},
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"typecheck": "tsc --noEmit --skipLibCheck",
		"prepare": "husky",
		"prepublishOnly": "npm run typecheck && npm run build"
	},
	"keywords": [
		"git",
		"worktree",
		"cli",
		"terminal",
		"ink",
		"react",
		"git-management",
		"developer-tools",
		"monorepo",
		"ai",
		"interactive-cli"
	],
	"author": "Matej Smisek",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/matejsmisek/grove.git"
	},
	"bugs": {
		"url": "https://github.com/matejsmisek/grove/issues"
	},
	"homepage": "https://github.com/matejsmisek/grove#readme",
	"engines": {
		"node": ">=18.0.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.39.1",
		"@trivago/prettier-plugin-sort-imports": "^6.0.0",
		"@types/glob": "^8.1.0",
		"@types/node": "^24.10.4",
		"@types/react": "^19.2.6",
		"@vitest/ui": "^4.0.16",
		"c8": "^10.1.3",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"memfs": "^4.51.1",
		"prettier": "^3.6.2",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.47.0",
		"vitest": "^4.0.16"
	},
	"dependencies": {
		"glob": "^13.0.0",
		"ink": "^6.5.1",
		"ink-text-input": "^6.0.0",
		"minimatch": "^10.1.1",
		"react": "^19.2.0"
	}
}
